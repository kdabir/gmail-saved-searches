{
  "name": "GMail Saved Searches",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Save your gmail search queries and quickly access when required",
  "homepage_url": "https://github.com/kdabir/gmail-saved-searches",
  "icons": {
    "24": "icons/icon24.png",
    "36": "icons/icon36.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "action": {
    "default_popup": "action.html",
    "default_title": "GMail Saved Searches",
    "default_icon": {
      "24": "icons/icon24.png",
      "36": "icons/icon36.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    }
  },
  "background": {
    "service_worker": "background.js"  
  },
  "permissions": [  
    "tabs",
    "storage",
    "downloads",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://mail.google.com/*"  
  ]
}
